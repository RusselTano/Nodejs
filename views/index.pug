extends layout.pug

block content
  h1 Hello World !

  div(class="test")
    p
      | Ligne 1,
      | ligne 2,
      | ligne 3.
  div(class=['test', 'test2'])
    p.
       Ligne1,
       Ligne2,
       Ligne3.
  div(style="color:white;background:black;")
    p Bonjour depuis le div3
  div(style={color:'white', background:'green', padding:'10px'})
    p Bonjour depuis le div4
  .container 
    .row.row1(style="display:flex;flex-wrap:wrap")
      .col.col-1 
        label(for="maCheckbox") col1
        input(type='checkbox' name='maCheckbox' id='maCheckbox' checked )
      .col.col-2 
        p #{name}
        p= name
      .col.col-3 
        if authenticated 
          p Je suis authentifi√©
        else
          p Je suis anonyme
    .row.row2
      .col.col-1 
        case friendsCount
          when 0
            p Aucun ami
          when 1
            p 1 ami
          default
            p #{friendsCount} amis
      .col.col-2 
        each product in products
          p #{product.name} - #{product.price}$
      .col.col-3 
        a(href='https://google.com') Google.com
  style.
    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 10px;
    }
    .container {
      margin: 0 auto;
      background: #ccc;
      padding: 10px;
    }
    .col {
      flex: 1 1 200px;
      padding: 10px;
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

